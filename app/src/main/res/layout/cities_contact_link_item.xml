<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:clipToPadding="false"
    android:paddingHorizontal="20dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/thumbnailGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/contactLinkImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/cities_contact_link_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/thumbnailGuideline"
        app:layout_constraintStart_toStartOf="@id/thumbnailGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleTextView"
        style="@style/RobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="14dp"
        android:includeFontPadding="false"
        android:text="@string/c_003_contact_link_title_text"
        android:textColor="@color/onSurface"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/thumbnailGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitleTextView"
        style="@style/RobotoRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:text="@string/c_003_contact_link_sub_title_text"
        android:textColor="@color/onSurfaceSecondary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/thumbnailGuideline"
        app:layout_constraintTop_toBottomOf="@id/titleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
