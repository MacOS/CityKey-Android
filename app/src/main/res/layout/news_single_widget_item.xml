<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsSingleItemContainer"
    style="@style/AppTheme.AppWidgetContainerParent"
    android:layout_width="@dimen/news_widget_single_item_size"
    android:layout_height="@dimen/news_widget_single_item_size"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="@dimen/news_widget_single_item_size"
        android:layout_height="@dimen/news_widget_single_item_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/description"
        style="@style/RobotoBold"
        android:layout_width="@dimen/news_widget_single_item_size"
        android:layout_height="@dimen/news_widget_single_item_size"
        android:layout_alignEnd="@+id/newsImage"
        android:layout_alignBottom="@+id/newsImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/single_news_widget_textview_background_gradient"
        android:ellipsize="end"
        android:gravity="bottom|start"
        android:hyphenationFrequency="full"
        android:maxLines="4"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:text="TeaserTeaserTeaserTeaserTeaserTeaserTeaserTeaserTeaserTeaserTeaserTeaserTeaserTeaser" />

</RelativeLayout>
