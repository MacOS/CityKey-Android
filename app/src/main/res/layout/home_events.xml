<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHomeEvents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerEventsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/global_content_margins"
        android:layout_marginEnd="@dimen/global_content_margins"
        android:paddingTop="24dp"
        android:paddingBottom="18dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/labelEvents"
            style="@style/RobotoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/h_001_home_title_events"
            android:focusable="true"
            android:textColor="@color/onSurface"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btnShowAll"
            style="@style/RobotoRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.3"
            android:clickable="true"
            android:enabled="false"
            android:focusable="true"
            android:gravity="bottom"
            android:paddingVertical="5dp"
            android:text="@string/h_001_home_btn_all_events"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/labelEvents"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelEvents" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/yourEventsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/global_content_margins"
        android:paddingEnd="@dimen/global_content_margins"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/RobotoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/h_001_events_favorites_header"
            android:textColor="@color/onSurfaceSecondary"
            android:textSize="12sp"
            app:textAllCaps="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/yourEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:adjustViewBounds="true"
            android:clipChildren="false"
            android:isScrollContainer="false"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:reverseLayout="false" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/RobotoBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/h_001_events_header"
            android:textColor="@color/onSurfaceSecondary"
            android:textSize="12sp"
            app:textAllCaps="true" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:clipChildren="false"
        android:isScrollContainer="false"
        android:nestedScrollingEnabled="false"
        android:paddingStart="@dimen/global_content_margins"
        android:paddingEnd="@dimen/global_content_margins"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:reverseLayout="false" />
</LinearLayout>