<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleBox"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_news_titlebox_height"
    tools:background="@color/oscaColor">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelCurNews"
        style="@style/RobotoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/global_content_margins"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:text="@string/h_001_home_title_news"
        android:textColor="@color/white"
        android:textSize="@dimen/home_news_titlebox_title_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnShowMore"
        style="@style/RobotoRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/global_content_margins"
        android:text="@string/h_001_home_btn_more_news"
        android:textColor="@color/white"
        android:textSize="@dimen/home_news_titlebox_showmore_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>